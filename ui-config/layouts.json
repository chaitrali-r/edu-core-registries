{
    "type": "opensaberLayoutSchema",
    "version": "0.1",
    "layouts": [
        {
            "institute": {
                "api": "/Institute",
                "title": "Institute Profile",
                "headerName" : "instituteName",
                "subHeadername" : "address.state,contactDetails.address.city",
                "blocks": [
                    {
                        "definition": "Institute",
                        "title": "Institute details",
                        "add": false,
                        "edit": true,
                        "editform":"institute-setup",
                        "fields": {
                            "includes": ["*"],
                            "excludes": ["courses","skills"]
                        }
                    },
                    {
                        "definition": "Institute",
                        "title": "Courses",
                        "add": true,
                        "addform":"course",
                        "claimEdit": true,
                        "editform":"course",
                        "multiple": true,
                        "fields": {
                            "includes": ["courses"]
                        }
                    },
                    {
                        "definition": "Institute",
                        "title": "Skills",
                        "add": true,
                        "addform":"skill",
                        "claimEdit": true,
                        "editform":"skill",
                        "multiple": true,
                        "fields": {
                            "includes": ["skills"]
                        }
                    }
                ]
            }
        },
        {
            "student": {
                "api": "/Student",
                "title": "Student Profile",
                "headerName" : "identityDetails.fullName",
                "subHeadername" : "contactDetails.address.state,contactDetails.address.city",
                "blocks": [
                    {
                        "definition": "Student",
                        "title": "Basic details",
                        "add": false,
                        "edit": true,
                        "editform":"student-setup",
                        "fields": {
                            "includes": ["*"],
                            "excludes": ["educationDetails"]
                        }
                    }
                ]
            }
        },
        {
            "board-cbse": {
                "table": "board-cbse-attestation"
            }
        }
    ]
}
