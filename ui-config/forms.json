{
    "type": "opensaberLayoutSchema",
    "version": "0.1",
    "forms": [
        {
            "signup": {
                "api": "/Issuer/invite",
                "type": "entity",
                "formclass": "row",
                "header": "default",
                "title": "Register as issuer",
                "fieldsets": [
                    {
                        "definition": "Issuer",
                        "title": "Enter Issuer Details",
                        "fields": [
                            {
                                "name": "name",
                                "required": true
                            },
                            {
                                "name": "logoUrl",
                                "required": true
                            },
                            {
                                "name": "websiteUrl",
                                "required": true
                            },
                            {
                                "name": "sectorType",
                                "required": true
                            },
                            {
                                "name": "accountDetails",
                                "children": {
                                    "definition": "AccountDetails",
                                    "description": "Enter Email id or Phone number that you would use for login",
                                    "title": "Account Details",
                                    "fields": [
                                       {
                                        "name": "userId",
                                        "required": true
                                       }
                                    ]
                                }
                            },
                            {
                                "name": "contactDetails",
                                "children": {
                                    "definition": "ContactDetails",
                                    "description": "Enter administrator details",
                                    "title": "Contact Details",
                                    "fields": [
                                        {
                                            "name": "name"
                                        },
                                        {
                                            "name": "mobile",
                                            "class": "col-6"
                                        },
                                        {
                                            "name": "email",
                                            "class": "col-6"
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                ],
                "redirectTo": "/dashboard"
            }
        },
        {
            "issuer-setup": {
                "api": "/Issuer/invite",
                "type": "entity",
                "formclass": "row",
                "header": "default",
                "fieldsets": [
                    {
                        "definition": "Issuer",
                        "fields": [
                            {
                                "name": "name",
                                "required": true
                            },
                            {
                                "name": "logoUrl",
                                "required": true
                            },
                            {
                                "name": "websiteUrl",
                                "required": true
                            },
                            {
                                "name": "sectorType",
                                "required": true
                            },
                            {
                                "name": "accountDetails"
                            },
                            {
                                "name": "contactDetails"
                               
                            }
                        ]
                    }
                ],
                "redirectTo": "/dashboard"
            }
        },
        {
            "add-document": {
                "api": "/Issure",
                "type": "property:document",
                "redirectTo": "/profile/issuer",
                "fieldsets": [
                    {
                        "definition": "Document",
                        "fields": [
                            {
                                "name": "document"
                            }
                        ]
                    }
                ],
                "template": {
                    "path": [
                        "/assets/template/first.html",
                        "/assets/template/sec.html"
                    ]
                }
            }
        },
        {
            "add-records": {
                "api": "/",
                "type": "entity",
                "redirectTo": "/dashboard",
                "fieldsets": [
                    {
                        "definition": "",
                        "fields": [
                            {
                                "name": ""
                            }
                        ]
                    }
                ]
            }
        }

    ]
}
